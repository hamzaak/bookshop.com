package com.bookshop.shoppingcartms.api;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.bookshop.shoppingcartms.dto.AccountDTO;

import feign.Headers;

@FeignClient(value = "account-ms", url = "http://localhost:9002/api/accounts")
public interface IAccountServiceClient {
 
   @GetMapping(value = "/get")
   @Headers("Content-Type: application/json")
   AccountDTO getAccount(@RequestBody AccountDTO accountDTO);
 
}