package com.bookshop.shoppingcartms.api;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.bookshop.shoppingcartms.dto.AccountDTO;

@FeignClient(value = "account-ms", url = "http://localhost:9002/api/accounts")
public interface IAccountServiceClient {
 
   @GetMapping(value = "/get")
   AccountDTO getAccount(@PathVariable("id") String id);
 
}