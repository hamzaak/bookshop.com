package com.bookshop.shoppingcartms.api;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.bookshop.shoppingcartms.dto.AccountDTO;

@FeignClient(value = "product-ms", url = "http://localhost:9001/api/products")
public interface IProductServiceClient {
	 @GetMapping(value = "/get")
	   AccountDTO getAccount(@RequestBody AccountDTO accountDTO);
}
